<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="FinalProjectTakeSix.LogIn"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LogIn">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Margin="0,20,0,0">
                <Label
                    Padding="10"
                    BackgroundColor="#4529BA"
                    FontSize="40"
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Log In Page"
                    TextColor="White"
                    VerticalTextAlignment="Center"
                    WidthRequest="300" />

                <BoxView HeightRequest="100" Color="Transparent" />

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Label
                        Margin="20,0,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="EndAndExpand"
                        Text="Username: "
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="200" />
                    <StackLayout>
                        <Entry x:Name="UsernameEntry" Placeholder="Enter Username" />
                        <BoxView HeightRequest="1" Color="#4529BA" />
                    </StackLayout>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Label
                        Margin="20,0,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="EndAndExpand"
                        Text="Password: "
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="200" />
                    <StackLayout>
                        <Entry
                            x:Name="PasswordEntry"
                            IsPassword="True"
                            Placeholder="Enter Password" />
                        <BoxView HeightRequest="1" Color="#4529BA" />
                    </StackLayout>
                </HorizontalStackLayout>

                <BoxView HeightRequest="20" Color="Transparent" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Button
                        x:Name="LogInButton"
                        Margin="0,20,0,0"
                        Padding="10"
                        BackgroundColor="#4529BA"
                        Clicked="OnClickLogIn"
                        CornerRadius="20"
                        Text="Log In"
                        TextColor="White"
                        WidthRequest="100" />
                </HorizontalStackLayout>

                <!--  Display success message on successful login  -->
                <Label
                    x:Name="SuccessLabel"
                    Margin="0,20,0,0"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text=""
                    TextColor="Green"
                    VerticalOptions="StartAndExpand" />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
