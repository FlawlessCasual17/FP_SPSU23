<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="FinalProject.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20,0" Spacing="0">
                <Grid Margin="0,20,0,0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Padding="200,0,0,0"
                        FontSize="20"
                        Text="Already registered for a Gym Membership?"
                        VerticalOptions="Center" />
                    <Image
                        Grid.Column="1"
                        HeightRequest="200"
                        Source="skh_gym_login.png"
                        WidthRequest="200" />
                </Grid>

                <VerticalStackLayout Margin="0,20,0,0">
                    <Label Text="Username" />
                    <StackLayout>
                        <Entry
                            x:Name="Username"
                            Margin="{OnPlatform Android='0,0',
                                                iOS='0,10'}"
                            Placeholder="Enter your Username" />
                        <BoxView HeightRequest="1" Color="#4529BA" />
                    </StackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,20,0,0">
                    <Label Text="Password" />
                    <StackLayout>
                        <Entry
                            x:Name="Password"
                            IsPassword="True"
                            Placeholder="Enter your Password" />
                        <BoxView HeightRequest="1" Color="#4529BA" />
                    </StackLayout>
                </VerticalStackLayout>

                <!--  Add a function in this button to navigate to the manager page  -->
                <Button
                    Margin="0,20,0,0"
                    BackgroundColor="#4529BA"
                    Clicked="OnClickedLogIn"
                    CornerRadius="20"
                    Text="Login"
                    TextColor="White" />
                <!--  x:Name="LogIn"(for later...)  -->

                <Label
                    Margin="0,15,0,0"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Not a Member of SKH Gym? Register now"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>

                <Grid Margin="0,50,0,0" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <BoxView
                        Grid.Column="0"
                        HeightRequest="1"
                        Color="Black" />
                    <Label
                        Grid.Column="1"
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="Use other methods" />
                    <BoxView
                        Grid.Column="2"
                        HeightRequest="1"
                        Color="Black" />
                </Grid>

                <HorizontalStackLayout
                    Margin="0,15,0,0"
                    HorizontalOptions="Center"
                    Spacing="15">
                    <Image
                        HeightRequest="35"
                        Source="ic_google.png"
                        WidthRequest="35" />
                    <Image
                        HeightRequest="35"
                        Source="ic_facebook.png"
                        WidthRequest="35" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
