<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="FinalProjectV9.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20,0" Spacing="0">
                <Grid>
                    <Image
                        HeightRequest="300"
                        HorizontalOptions="Center"
                        Source="skh_gym_login.jpg"
                        VerticalOptions="Start"
                        WidthRequest="300" />
                    <Label
                        FontSize="30"
                        HorizontalOptions="Center"
                        Text="WELCOME TO SKH GYM"
                        VerticalOptions="End" />
                </Grid>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Button
                        x:Name="LogInButton"
                        Margin="0,20,0,0"
                        Padding="10"
                        BackgroundColor="#4529BA"
                        Clicked="OnClickLogIn"
                        CornerRadius="20"
                        Text="Log In"
                        TextColor="White"
                        WidthRequest="100" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
